          = link_to t("activemodel.attributes.questions_search_form.sort_type.#{sort_type}"), url_with_params(search_questions_path, sort_type, questions_search_form_params), \
            class: (active_if(questions_path) || active_sort_link_if(questions_search_form, sort_type))
